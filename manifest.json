{
  "manifest_version": 2,

  "name": "扬程点餐小助手",
  "description": "这个扩展程序帮助您快速点餐.",
  "version": "1.0.3",

  "permissions": [
    "notifications",
    "alarms",
    "storage",
    "cookies",
    "*://dc.wk2.com/*"
  ],
  "icons": {
       "16": "icon.png",
       "48": "icon48.png",
       "128": "icon128.png"
   },
  "background": {
     "scripts": ["jquery.min.js", "util.js", "service.js"]
  },
  "browser_action": {
    "default_icon": "icon128.png",
    "default_popup": "popup.html"
  }
}
